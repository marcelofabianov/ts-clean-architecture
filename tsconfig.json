{
    "compilerOptions": {
        "target": "es2017",
        "module": "es2017",
        "strict": true,
        "esModuleInterop": true,
        "strictNullChecks":  true,
        "sourceMap": true,
        "rootDir": ".",
        "baseUrl": "src",
        "outDir": "dist",
        "types": ["node", "jest"],
        "typeRoots" : ["./node_modules/@types", "./src/@types"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "inlineSourceMap": true,
        "pretty": true,
        "paths": {
            "@/*": ["*"]
        },
        "exclude": [
            "node_modules",
            "!node_modules/@types",
            "./dist"
        ]
    }
}